<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.register.RegisterActivity"
    android:background="@color/colorWhite">
    
    <TextView
        android:id="@+id/register_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textSize="@dimen/text_36sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/inter_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/name_textView"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintHorizontal_bias="0.12"
        />

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/full_name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:layout_marginBottom="@dimen/space_6dp"
        app:layout_constraintBottom_toTopOf="@id/name_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/name_rectangle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginBottom="@dimen/space_6dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/email_textView"
        app:layout_constraintVertical_bias="0.2"/>
    <EditText
        android:id="@+id/name_editText"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_24dp"
        android:layout_marginTop="@dimen/space_11dp"
        android:layout_marginBottom="@dimen/space_11dp"
        android:layout_marginStart="@dimen/space_14dp"
        android:layout_marginEnd="@dimen/space_14dp"
        android:textColorHint="@color/colorLightGray"
        android:hint="@string/input_placeholder"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/name_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/name_rectangle"
        app:layout_constraintStart_toStartOf="@+id/name_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/name_rectangle"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/email_address"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:layout_marginBottom="@dimen/space_6dp"
        app:layout_constraintBottom_toTopOf="@id/email_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/email_rectangle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginBottom="@dimen/space_6dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/password_textView"
        app:layout_constraintVertical_bias="0.2"/>
    <EditText
        android:id="@+id/email_editText"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_24dp"
        android:layout_marginTop="@dimen/space_11dp"
        android:layout_marginBottom="@dimen/space_11dp"
        android:layout_marginStart="@dimen/space_14dp"
        android:layout_marginEnd="@dimen/space_14dp"
        android:textColorHint="@color/colorLightGray"
        android:hint="@string/input_placeholder"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/email_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/email_rectangle"
        app:layout_constraintStart_toStartOf="@+id/email_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/email_rectangle"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/password_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.12"/>
    <ImageView
        android:id="@+id/password_rectangle"
        android:layout_width="@dimen/space_0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginTop="@dimen/space_6dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_textView" />
    <EditText
        android:id="@+id/password_editText"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_24dp"
        android:layout_marginTop="@dimen/space_11dp"
        android:layout_marginBottom="@dimen/space_11dp"
        android:layout_marginStart="@dimen/space_14dp"
        android:layout_marginEnd="@dimen/space_14dp"
        android:textColorHint="@color/colorLightGray"
        android:hint="@string/input_placeholder"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/password_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/password_rectangle"
        app:layout_constraintStart_toStartOf="@+id/password_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/password_rectangle"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/confirm_password_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/confirm_password"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_rectangle"
        app:layout_constraintVertical_bias="0" />
    <ImageView
        android:id="@+id/confirm_password_rectangle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginTop="@dimen/space_6dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_textView" />
    <EditText
        android:id="@+id/confirm_password_editText"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_24dp"
        android:layout_marginTop="@dimen/space_11dp"
        android:layout_marginBottom="@dimen/space_11dp"
        android:layout_marginStart="@dimen/space_14dp"
        android:layout_marginEnd="@dimen/space_14dp"
        android:textColorHint="@color/colorLightGray"
        android:hint="@string/input_placeholder"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/confirm_password_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_rectangle"
        app:layout_constraintStart_toStartOf="@+id/confirm_password_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/confirm_password_rectangle"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.2"/>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="@dimen/space_0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_log_guest"
        android:backgroundTint="@color/colorDarkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/registerText"
        android:textAlignment="inherit"
        android:fontFamily="@font/inter_bold"
        android:textSize="@dimen/text_12sp"
        android:textColor="@color/colorGreen"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_rectangle"/>

    <TextView
        android:id="@+id/login_message_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/existent_account"
        android:fontFamily="@font/inter_normal"
        android:textColor="@color/colorLightGray"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintTop_toBottomOf="@+id/register_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/login_textView_link"
        app:layout_constraintHorizontal_chainStyle="packed" />
    <TextView
        android:id="@+id/login_textView_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_6dp"
        android:text="@string/log_in"
        android:textSize="@dimen/text_14sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/inter_normal"
        app:layout_constraintStart_toEndOf="@+id/login_message_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>