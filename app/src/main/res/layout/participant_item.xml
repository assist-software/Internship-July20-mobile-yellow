<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/space_4dp"
    android:layout_marginBottom="@dimen/space_4dp">

    <RelativeLayout
        android:id="@+id/base_of_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/near_black">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/space_40dp"
            android:layout_height="@dimen/space_40dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:layout_marginBottom="@dimen/space_10dp"
            android:layout_marginStart="@dimen/space_17dp"
            android:src="@drawable/img_event" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_32dp"
            android:layout_marginTop="@dimen/space_14dp"
            android:layout_marginEnd="@dimen/space_14dp"
            android:layout_toEndOf="@+id/user_icon"
            android:fontFamily="@font/inter_normal"
            android:layout_alignParentTop="true"
            android:text="Numee par"
            android:textColor="@color/near_white"
            android:textSize="@dimen/text_24sp" />

        <ImageView
            android:id="@+id/check_btn_img"
            android:layout_width="@dimen/space_24dp"
            android:layout_height="@dimen/space_24dp"
            android:layout_marginTop="@dimen/space_18dp"
            android:layout_marginEnd="@dimen/space_18dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/space_18dp"
            android:src="@drawable/unchecked_part" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
