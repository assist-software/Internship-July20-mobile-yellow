<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.addworkouts.AddWorkoutsActivity">

    <include layout="@layout/home_toolbar" />

    <TextView
        android:id="@+id/addWorkouts_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="@dimen/space_86dp"
        android:fontFamily="@font/inter_normal"
        android:text="@string/add_workouts"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/event_rectangle"
        android:layout_width="@dimen/space_0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginTop="@dimen/space_74dp"
        android:layout_marginBottom="@dimen/space_16dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addWorkouts_textView"/>
    <Spinner
        android:id="@+id/spinnerEvent"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginTop="@dimen/space_74dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addWorkouts_textView"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/heartRate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/heart_rate"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintTop_toBottomOf="@id/event_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/heartRate_rectangle"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintTop_toBottomOf="@id/heartRate_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.39" />
    <EditText
        android:id="@+id/heartRate_editText"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_24dp"
        android:layout_marginTop="@dimen/space_11dp"
        android:layout_marginBottom="@dimen/space_11dp"
        android:layout_marginStart="@dimen/space_14dp"
        android:layout_marginEnd="@dimen/space_14dp"
        android:textColorHint="@color/colorLightGray"
        android:hint="@string/input_placeholder"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/heartRate_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/heartRate_rectangle"
        app:layout_constraintStart_toStartOf="@+id/heartRate_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/heartRate_rectangle" />

    <TextView
        android:id="@+id/duration_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginBottom="@dimen/space_6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_rectangle"
        app:layout_constraintHorizontal_bias="0.12"/>
    <ImageView
        android:id="@+id/duration_rectangle"
        android:layout_width="@dimen/space_0dp"
        app:layout_constraintWidth_percent="0.39"
        android:layout_height="@dimen/space_46dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duration_textView"
        android:layout_marginBottom="@dimen/space_6dp"
        app:layout_constraintHorizontal_bias="0.16"/>
    <EditText
        android:id="@+id/duration_editText"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_24dp"
        android:layout_marginTop="@dimen/space_11dp"
        android:layout_marginBottom="@dimen/space_11dp"
        android:layout_marginStart="@dimen/space_14dp"
        android:layout_marginEnd="@dimen/space_14dp"
        android:textColorHint="@color/colorLightGray"
        android:hint="@string/input_placeholder"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/duration_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/duration_rectangle"
        app:layout_constraintStart_toStartOf="@+id/duration_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/duration_rectangle" />

    <TextView
        android:id="@+id/avspeed_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/av_speed"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintTop_toBottomOf="@id/heartRate_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/avspeed_rectangle"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintTop_toBottomOf="@id/avspeed_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.39" />
    <EditText
        android:id="@+id/avspeed_editText"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_24dp"
        android:layout_marginTop="@dimen/space_11dp"
        android:layout_marginBottom="@dimen/space_11dp"
        android:layout_marginStart="@dimen/space_14dp"
        android:layout_marginEnd="@dimen/space_14dp"
        android:textColorHint="@color/colorLightGray"
        android:hint="@string/input_placeholder"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/avspeed_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/avspeed_rectangle"
        app:layout_constraintStart_toStartOf="@+id/avspeed_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/avspeed_rectangle" />

    <TextView
        android:id="@+id/calories_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginBottom="@dimen/space_6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/duration_rectangle"
        app:layout_constraintHorizontal_bias="0.12"/>
    <ImageView
        android:id="@+id/calories_rectangle"
        android:layout_width="@dimen/space_0dp"
        app:layout_constraintWidth_percent="0.39"
        android:layout_height="@dimen/space_46dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calories_textView"
        android:layout_marginBottom="@dimen/space_6dp"
        app:layout_constraintHorizontal_bias="0.16"/>
    <EditText
        android:id="@+id/calories_editText"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_24dp"
        android:layout_marginTop="@dimen/space_11dp"
        android:layout_marginBottom="@dimen/space_11dp"
        android:layout_marginStart="@dimen/space_14dp"
        android:layout_marginEnd="@dimen/space_14dp"
        android:textColorHint="@color/colorLightGray"
        android:hint="@string/input_placeholder"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/calories_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/calories_rectangle"
        app:layout_constraintStart_toStartOf="@+id/calories_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/calories_rectangle" />

    <TextView
        android:id="@+id/distance_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginBottom="@dimen/space_6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calories_rectangle"
        app:layout_constraintHorizontal_bias="0.12"/>
    <ImageView
        android:id="@+id/distance_rectangle"
        android:layout_width="@dimen/space_0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginTop="@dimen/space_6dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/distance_textView"/>
    <EditText
        android:id="@+id/distance_editText"
        android:layout_width="@dimen/space_0dp"
        android:layout_height="@dimen/space_24dp"
        android:layout_marginTop="@dimen/space_11dp"
        android:layout_marginBottom="@dimen/space_11dp"
        android:layout_marginStart="@dimen/space_14dp"
        android:layout_marginEnd="@dimen/space_14dp"
        android:textColorHint="@color/colorLightGray"
        android:hint="@string/input_placeholder"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_14sp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/distance_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/distance_rectangle"
        app:layout_constraintStart_toStartOf="@+id/distance_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/distance_rectangle"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.2"/>

    <ImageView
        android:id="@+id/workoutEffectiveness_rectangle"
        android:layout_width="@dimen/space_0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginTop="@dimen/space_16dp"
        android:background="@drawable/rectangle_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/distance_rectangle" />
    <Spinner
        android:id="@+id/spinnerWorkoutEffectiveness"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_46dp"
        android:layout_marginTop="@dimen/space_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/distance_rectangle"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/saveWorkout_btn"
        android:layout_width="@dimen/space_0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_log_guest"
        android:backgroundTint="@color/colorDarkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/save"
        android:textAlignment="inherit"
        android:fontFamily="@font/inter_bold"
        android:textSize="@dimen/text_12sp"
        android:textColor="@color/colorGreen"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workoutEffectiveness_rectangle" />

</androidx.constraintlayout.widget.ConstraintLayout>