<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/club_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/black_box_round_corners"
    android:paddingTop="@dimen/space_21dp"
    android:paddingBottom="@dimen/space_21dp"
    android:paddingStart="@dimen/space_16dp"
    android:paddingEnd="@dimen/space_16dp"
    android:layout_marginBottom="@dimen/space_16dp">

    <ImageView
        android:id="@+id/member_picture"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/input_placeholder"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_24sp"
        android:layout_marginStart="@dimen/space_32dp"
        app:layout_constraintStart_toEndOf="@+id/member_picture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>