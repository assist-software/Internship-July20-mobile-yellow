<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_with_icon"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorBlack"
    app:titleTextColor="@color/colorWhite"
    app:contentInsetStartWithNavigation="0dp">
    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="@dimen/space_24dp"
        android:layout_height="@dimen/space_24dp"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginTop="@dimen/space_16dp"
        android:layout_marginBottom="@dimen/space_16dp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/space_22dp"/>
    <TextView
        android:id="@+id/toolbar_title"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:fontFamily="@font/roboto_normal"
        android:textSize="@dimen/text_20sp" />
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="@dimen/space_20dp"
        android:layout_height="@dimen/space_16dp"
        android:src="@drawable/notification_icon"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/space_20dp"/>

</androidx.appcompat.widget.Toolbar>