<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/black_box_round_corners"
    android:paddingTop="@dimen/space_21dp"
    android:paddingBottom="@dimen/space_21dp"
    android:paddingStart="@dimen/space_16dp"
    android:paddingEnd="@dimen/space_16dp"
    android:layout_marginBottom="@dimen/space_16dp">

    <TextView
        android:id="@+id/club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/running_club"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_20sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/joinClub_btn"
        android:layout_width="@dimen/space_102dp"
        android:layout_height="@dimen/space_46dp"
        android:text="JOIN"
        android:textColor="@color/colorGreen"
        android:background="@drawable/join_button"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textAllCaps="true" />

</RelativeLayout>