<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/club_item"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="@dimen/space_16dp"
    android:background="@drawable/black_box_round_corners"
    android:orientation="horizontal"
    android:paddingStart="@dimen/space_16dp"
    android:paddingEnd="@dimen/space_16dp">

    <FrameLayout
        android:id="@+id/club_status_frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/space_12dp"
        android:layout_marginBottom="@dimen/space_12dp"
        android:background="@drawable/join_button"
        android:paddingStart="35dp"
        android:paddingEnd="35dp">

        <TextView
            android:id="@+id/club_status_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_normal"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/text_12sp"
            android:textStyle="bold"
            tools:text="Join" />
    </FrameLayout>

    <TextView
        android:id="@+id/club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/input_placeholder"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_20sp" />

</RelativeLayout>