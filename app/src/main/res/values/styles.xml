<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NoActionBarNoFullScreen" parent="FullScreen">
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/colorDarkGray</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="blackTheme" parent="FullScreen">
        <item name="android:statusBarColor">@color/colorDarkGray</item>
    </style>

</resources>